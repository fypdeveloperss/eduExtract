{
  "manifest_version": 3,
  "name": "EduExtract - AI Learning Assistant",
  "version": "1.0.0",
  "description": "Generate educational content from YouTube videos, PDFs, and text using AI",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "contextMenus",
    "downloads",
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:5173/*",
    "http://localhost:5000/*",
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    },
    {
      "matches": ["http://localhost:5173/dashboard*"],
      "js": ["dashboard-bridge.js"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
